{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "vrt:reset": "rm -rf ./vrt/actual",
    "vrt:capture": "storycap http://localhost:6006 -o ./vrt/actual",
    "vrt:compare": "reg-cli ./vrt/actual ./vrt/expected ./vrt/diff -J ./vrt/out.json -R ./vrt/index.html -M 0.01",
    "vrt": "run-s vrt:reset vrt:capture vrt:compare",
    "vrt:approve": "pnpm vrt:compare -U",
    "e2e": "playwright test",
    "e2e:approve": "playwright test --update-snapshots",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@next/eslint-plugin-next": "^14.0.2",
    "@playwright/test": "^1.40.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/addon-interactions": "^7.6.4",
    "@storybook/addon-links": "^7.6.4",
    "@storybook/addon-onboarding": "^1.0.9",
    "@storybook/blocks": "^7.6.4",
    "@storybook/nextjs": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/test": "^7.6.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^17.0.12",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "eslint": "^8.53.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "reg-cli": "^0.17.7",
    "storybook": "^7.6.4",
    "storycap": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
